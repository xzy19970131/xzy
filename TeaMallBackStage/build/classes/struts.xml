<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 配置字符集 -->
	<constant name="struts.DevMode" value="true"></constant>
	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
	
	<!-- 处理有关用户的业务（配置你写好的后台组建，让struts识别它） -->
	<package name="user" extends="struts-default" abstract="false"  namespace="/admin">
		<action name="LoginAction" class="com.oracle.TeaMall.action.LoginAction">
			<result name="success">/index.jsp</result>
			<result name="failed">/failed.jsp</result>
		</action>
		<action name="UserAction" class="com.oracle.TeaMall.action.UserAction">
			<result name="registerSuccess">/index.jsp</result>
			<result name="registerFail">/index.jsp</result>
			
			<result name="listUserByPage">/index.jsp</result>
		</action>
	</package>
</struts>